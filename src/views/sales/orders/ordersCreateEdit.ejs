<div class="sidePopup sppxl" id="createEditPopup">

    <div class="sidePopupMain">
        <div class="closeSidePopup" id="closeCreateEditPopup">X</div>
        <div class="sppTitle">CREAR PEDIDO</div>
        <div class="sppSubtitle mtm" id="customerOrder"></div>
    </div>

    <div class="sidePopupContent">

        <div class="divGeneralActions" id="DGAordersCreateEdit">
            <div class="divGeneralAction" id="saveOrder">
                <i class="fa-regular fa-floppy-disk"></i>
                <div class="showActionPopup">
                    Guardar pedido
                </div>
            </div>
        </div>
        
        <div class="divInputsRow">

            <div class="divInput">
                <label class="label1" id="selectProductLabel">Producto</label>
                <select name ="selectProduct" id="selectProduct" class="input1 inputXXXL">
                    <option value="default" id="selectProductDefault"></option>
                    <% distinctProducts.forEach(product => { %>
                        <option value="<%= product.description %>">
                            <%= product.description %>
                        </option>
                    <% }) %>
                </select>
            </div>

            <div class="divInput">
                <label class="label1" id="selectColorLabel">Color</label>
                <select id="selectColor" name="selectColor" class="input1 inputL">
                    <option value="default" id="selectColorDefault"></option>
                </select>
            </div>

            <div class="divInput">
                <label class="label1" id="selectSizeLabel">Talle</label>
                <select id="selectSize" name ="selectSize" class="input1 inputS">
                    <option value="default" id="selectSizeDefault"></option>
                </select>
            </div>

            <div class="divInput">
                <label class="label1" id="quantityLabel">Cantidad</label>
                <input type="text" id="quantity" name="quantity" class="input1 inputM">
            </div>
            
            <div id="createEditAddProduct">
                <i class="fa-solid fa-plus"></i>
            </div>

        </div>

        <div class="divError notVisible" id="errorText1"></div>

        <div class="divTableSummary mtl mbm" id="orderInfo"></div>

        <div class="divTable mtl">
            <table>
                <thead>
                    <tr>
                        <th class="theadCss wXXL thLeftBorder thTall">Producto</th>
                        <th class="theadCss wS thTall">Color</th>
                        <th class="theadCss wXS thTall">Talle</th>
                        <th class="theadCss wS thTall">Precio unitario</th>    
                        <th class="theadCss wXS thTall">Cantidad</th>                        
                        <th class="theadCss wS thTall">Total</th>
                        <th class="theadCss wXXS thTall"><i class="fa-regular fa-pen-to-square"></i></th>
                        <th class="theadCss wXXS thRightBorder thTall"><i class="fa-regular fa-trash-can"></i></i></th>
                    </tr>
                </thead>
                <tbody id="bodyCreateEdit"></tbody>
            </table>
        </div>
    </div>

    <%- include('./ordersEditPopup') %>

</div>





