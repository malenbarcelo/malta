<!----------create / Edit order popup (ceopp)---------->

<div class="sidePopup sppxl" id="ceopp">

    <div class="sidePopupMain">
        <div class="closeSidePopup" id="ceoppClose">X</div>
        <div class="sppTitle" id="customerOrder"></div>
        <div class="sppSubitle mtm" id="ceoppTitle"></div>
    </div>

    <div class="sidePopupContent">
        <div class="divGeneralActions" id="DGAordersCreateEdit">
            <div class="divGeneralAction" id="DGAsaveOrder">
                <i class="fa-regular fa-floppy-disk"></i>
                <div class="showActionPopup">
                    Guardar pedido
                </div>
            </div>
        </div>
        
        <div class="divInputsRow">
            <div class="divInput" id="inputProduct">
                <label class="label1" id="selectProductLabel">Producto</label>
                <input type="text" class="input1 inputXXXL" id="selectProduct">
                <ul class="predictedElements" id="ulPredictedProducts"></ul>
            </div>

            <div class="divInput">
                <label class="label1" id="selectSizeLabel">Talle</label>
                <select id="selectSize" name ="selectSize" class="input1 inputS">
                    <option value="" id="selectSizeDefault"></option>
                </select>
            </div>
        </div>

        <div class="divTableSummary mtl mbm" id="orderInfo"></div>

        <div class="divTable mtl">
            <table>
                <thead>
                    <tr>
                        <th class="theadCss wXXL thLeftBorder thTall">Producto</th>
                        <th class="theadCss wS thTall">Color</th>
                        <th class="theadCss wXS thTall">Talle</th>
                        <th class="theadCss wS thTall">Precio unitario</th>    
                        <th class="theadCss wXS thTall">Cantidad requerida</th>
                        <th class="theadCss wXS thTall">Cantidad confirmada</th>                        
                        <th class="theadCss wS thTall">Total</th>
                        <th class="theadCss wXXS thTall"><i class="fa-regular fa-pen-to-square"></i></th>
                        <th class="theadCss wXXS thRightBorder thTall"><i class="fa-regular fa-trash-can"></i></i></th>
                    </tr>
                </thead>
                <tbody id="bodyCreateEdit"></tbody>
            </table>
        </div>
    </div>

</div>





