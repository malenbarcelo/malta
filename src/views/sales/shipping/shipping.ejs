<%- include('../../partials/head') %>
<%- include('../../partials/header') %>

    <!------MAIN TITLE------>
    <div class="mainTitle">SEGUIMIENTO DE ENVÍOS</div>

    <!------MAIN FILTERS------>
    <div class="mainFilters">
        <div class="divInputsRow">
            <div class="divInput">
                <label class="label1" id="orderNumberLabel" >#Pedido</label>
                <input type="text" class="input1 is ipl" autocomplete="off" id="orderNumber">
            </div>            
            <div class="divInput">
                <label class="label1" id="customerLabel" >Cliente</label>
                <input type="text" class="input1 il ipl" autocomplete="off" id="customer">
                <ul class="predictedElements" id="ulPredictedCustomers"></ul>
            </div>
            <div id="unfilter" class="unfilterIcon" >
                <i class="fa-solid fa-filter-circle-xmark"></i>
            </div>
        </div>
    </div>

    <!---------CUSTOMERS TABLE--------->
    <div class="mtl">
        <div class="divTable" id="shippingTable">

            <div class="tableInfo" id="rsppInfo">Entregar</div>
            <div class="tableInfo" id="esppInfo">Editar</div>
            
            <table>
                <thead>
                    <tr>
                        <th class="theadCss wS thLeftBorder thTall">Fecha</th>
                        <th class="theadCss wXS thTall">#Pedido</th>
                        <th class="theadCss wL thTall">Cliente</th>
                        <th class="theadCss wS thTall">Teléfono</th>
                        <th class="theadCss wS thTall">Envío</th>
                        <th class="theadCss wS thTall">Remito</th>
                        <th class="theadCss wM thTall">Empresa de transporte</th>
                        <th class="theadCss wS thTall">Estado del pago</th>
                        <th class="theadCss wM thTall">Forma de pago</th>
                        <th class="theadCss wXXS thTall"><i class="fa-solid fa-truck-ramp-box tableIcon" id="rsppIcon"></i></th>
                        <th class="theadCss wXXS thTall thRightBorder"><i class="fa-regular fa-pen-to-square tableIcon" id="esppIcon"></i></th>
                    </tr>
                </thead>
                <tbody id="body"></tbody>
            </table>
            
        </div>
        
    </div>

    <!----------LOADER---------->
    <div class="loader middleLoader" id="loader" ></div>

    <!----------POPUPS---------->
    <%- include('./shippingESHPP') %>
    <%- include('../../partials/confirmPopup') %>
    <%- include('../../partials/oneInputPopup') %>
    <%- include('../../partials/okPopup') %>

    <!----------SCRIPTS---------->
    <script type="module" src="/js/sales/shipping/shipping.js"></script>



    


