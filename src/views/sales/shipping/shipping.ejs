<%- include('../../partials/head') %>
<%- include('../../partials/header') %>

    <!------MAIN TITLE------>
    <div class="mainTitle">SEGUIMIENTO DE ENVÍOS</div>

    <!------MAIN FILTERS------>
    <div class="mainFilters">
        <div class="divInputsRow">            
            <div class="divInput">
                <label class="label1" id="filterCustomerLabel" >Cliente</label>
                <input type="text" class="input1 ixxl ipl" autocomplete="off" id="filterCustomer">
                <ul class="predictedElements" id="ulPredictedCustomers"></ul>
            </div>
            <div id="unfilter" class="unfilterIcon" >
                <i class="fa-solid fa-filter-circle-xmark"></i>
            </div>
        </div>
    </div>

    <!---------CUSTOMERS TABLE--------->
    <div class="mtm">
        <div class="divTable" id="shippingTable">

            <div class="tableInfo" id="ecppInfo">Editar</div>
            <div class="tableInfo" id="dcppInfo">Eliminar</div>
            
            <table>
                <thead>
                    <tr>
                        <th class="theadCss wS thLeftBorder thTall">Fecha</th>
                        <th class="theadCss wS thTall">#Pedido</th>
                        <th class="theadCss wL thTall">Cliente</th>
                        <th class="theadCss wS thTall">Teléfono</th>
                        <th class="theadCss wS thTall">Envío</th>
                        <th class="theadCss wS thTall">Estado del pago</th>
                        <th class="theadCss wM thTall">Forma de pago</th>
                        <th class="theadCss wXXS thTall"><i class="fa-regular fa-pen-to-square tableIcon" id="ecppIcon"></i></th>
                        <th class="theadCss wXXS thTall thRightBorder"><i class="fa-regular fa-trash-can tableIcon" id="dcppIcon"></i></th>
                    </tr>
                </thead>
                <tbody id="body"></tbody>
            </table>
            
        </div>
        
    </div>

    <!----------LOADER---------->
    <div class="loader middleLoader" id="loader" ></div>

    <!----------POPUPS---------->
