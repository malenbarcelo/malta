<!----------Delete line popup---------->
<div class="popup" id="dlpp">
    
    <div class="popupContent" id="dlppContent">

        <div class="popupIcons">
            <div class="popupIcon1"><i class="fa-regular fa-trash-can"></i></div>
            <div class="popupClose1" id="dlppClose"><i class="fa-solid fa-rectangle-xmark"></i></div>
        </div>

        <div class="popupQuestion" id="dlppQuestion"></div>
        
        <div class="divButtonsRow mbs">
            <div id="dlppAccept" class="button1 bs">Aceptar</div>
            <div id="dlppCancel" class="button1 bs">Cancelar</div>
        </div>
    </div>
</div>

<div class="okPopup" id="dlppOk">    
    <div class="okContent" id="dlppOkContent">
        <div class="okDiv">
            <div class="okIcon1"><i class="fa-regular fa-circle-check"></i></div>
            <div class="okText">Línea eliminada con éxito</div>
        </div>
    </div>
</div>

<!----------Edit line ---------->
<div class="popup" id="elpp">
    
    <div class="popupContent" id="elppContent">

        <div class="popupIcons">
            <div class="popupIcon1"><i class="fa-regular fa-pen-to-square"></i></div>
            <div class="popupClose1" id="elppClose"><i class="fa-solid fa-rectangle-xmark"></i></div>
        </div>

        <div class="popupTitle2 mts" id="elppTitle">EDITAR DATOS</div>

        <div class="divInputsColumn mtl mbl">
            <div class="divInput">
                <label class="label1" id="elppPriceLabel">Precio unitario</label>
                <input type="number" step="0.01" class="input1 inputL" id="elppPrice">
                <div class="divError"  id="elppPriceError">Debe completar el precio</div>
            </div>
            <div class="divInput">
                <label class="label1" id="elppQtyLabel">Cantidad requerida</label>
                <input type="number" class="input1 inputL" id="elppQtyR">
            </div>
            <div class="divInput">
                <label class="label1" id="elppQtyLabel">Cantidad confirmada</label>
                <input type="number" class="input1 inputL" id="elppQtyC">
            </div>            
        </div>

        <div class="divButtonsRow">
            <div id="elppAccept" class="button1 bxs">Aceptar</div>
            <div id="elppCancel" class="button1 bxs">Guardar</div>
        </div>
    </div>
</div>

<!----------add product---------->
<div class="popup" id="appp">
    
    <div class="popupContent" id="apppContent">

        <div class="popupIcons">
            <div class="popupIcon1"><i class="fa-regular fa-pen-to-square"></i></div>
            <div class="popupClose1" id="apppClose"><i class="fa-solid fa-rectangle-xmark"></i></div>
        </div>

        <div class="popupTitle2 mts" id="apppTitle">ASIGNACIÓN MASIVA</div>

        <div class="divInputsColumn mtl">
            <div class="divInput">
                <label class="label1" id="apppProductLabel">Producto</label>
                <input type="text" class="input1 inputXXXL" id="apppProduct" autocomplete="off">
                <ul class="predictedElements" id="ulPredictedProducts2"></ul>
            </div>
            <div class="divInput">
                <label class="label1" id="apppCustomerLabel">Cliente</label>
                <input type="text" class="input1 inputXXXL" id="apppCustomer" autocomplete="off">
                <ul class="predictedElements" id="ulPredictedCustomers2"></ul>
            </div>
        </div>

        <div class="divError" id="apppError">Debe completar todos los datos</div>

        <div class="divButtonsRow mtm mbm">
            <div id="apppAddLine" class="button1 bxs">Agregar</div>
        </div>

        <div class="divTable" id="productsClientsTable">
            <table>
                <thead>
                    <tr>
                        <th class="theadCss wXL thLeftBorder">Cliente</th>
                        <th class="theadCss wXXL">Producto</th>
                        <th class="theadCss wXL">Color</th>
                        <th class="theadCss wXS">Talle</th>
                        <th class="theadCss wXXS thRightBorder"><i class="fa-regular fa-trash-can tableIcon"></i></th>
                    </tr>
                </thead>
                <tbody id="bodyAddProducts"></tbody>
            </table>
        </div>

        <div class="divButtonsRow mtm mbm">
            <div id="apppAccept" class="button1 bxs">Aceptar</div>
            <div id="apppCancel" class="button1 bxs">Cancelar</div>
        </div>
    </div>
</div>

<div class="okPopup" id="apppOk">    
    <div class="okContent" id="apppOkContent">
        <div class="okDiv">
            <div class="okIcon1"><i class="fa-regular fa-circle-check"></i></div>
            <div class="okText">Productos agregados con éxito</div>
        </div>
    </div>
</div>

