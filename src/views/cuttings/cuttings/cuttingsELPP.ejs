<!--- edit line popup (elpp) --->
<div class="popup2" id="elpp">    
    <div class="popupContent t-120 w-300">

        <div class="popupIcons">
            <div class="popupIcon2"><i class="fa-regular fa-pen-to-square"></i></div>
            <div class="popupClose2" id="elppClose"><i class="fa-solid fa-rectangle-xmark"></i></div>
        </div>
        
        <div class="popupTitle1" id="elppTitle"></div>

        <div class="divInputsColumn mtm mbm">
            <div class="divInput mtm">
                <label class="label1" id="elppColorLabel">Color</label>
                <input type="text" class="input-1 w-150 ipl" id="elppColor" autocomplete="off">
                <div class="divError" id="elppColorError"></div>
            </div>
            <div class="divInput mtm">
                <label class="label1" id="elppLayersLabel">Capas</label>
                <input type="number" class="input-1 w-150 ipl" id="elppLayers" autocomplete="off">
                <div class="divError" id="elppLayersError"></div>
            </div>
            <div class="divInput mtm">
                <label class="label1" id="elppKgsMtsLabel">Kgs/Mts</label>
                <input type="number" step="0.01" class="input-1 w-150 ipl" id="elppKgsMts">
            </div>
        </div>

        <div class="divButtonsRow m-b-10">
            <div id="elppSave" class="button1 bxs">Guardar</div>
        </div>
    </div>
</div>
